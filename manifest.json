{
  "manifest_version": 2,
  "name": "Jobbify",
  "description": "Apply for more jobs in less time",
  "version": "0.0.0.1",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Jobbify",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["style.css"],
      "js": ["content.js"]
    }
  ]
}
